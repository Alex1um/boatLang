dclear = out(5);
{
    ball_x = 0;
    ball_y = 0;
    vx = 1;
    vy = 1;
    while (1) {
        if (ball_x > 4) {
            vx = -1;
        }
        if (ball_x < 1) {
            vx = 1;
        }
        if (ball_y > 6) {
            vy = -1;
        }
        if (ball_y < 1) {
            vy = 1;
        }
        ball_x = ball_x + vx;
        ball_y = ball_y + vy;
        dclear(1);
        display(ball_x, ball_y);
    }
}