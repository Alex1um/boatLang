integer = @{ ASCII_DIGIT+ }

string = ${ "\"" ~ inner ~ "\"" }
inner = @{ char* }
char = {
    !("\"" | "\\") ~ ANY
    | "\\" ~ ("\"" | "\\" | "/" | "b" | "f" | "n" | "r" | "t")
    | "\\" ~ ("u" ~ ASCII_HEX_DIGIT{4})
}

atom = _{ integer | string | function | name | "(" ~ expr ~ ")" }

bin_op = _{ add | subtract | multiply | divide | concat | gt | eq }
    add = { "+" }
    subtract = { "-" }
    multiply = { "*" }
    divide = { "/" }
    concat = { ".." }
    gt = { ">" }
    eq = { "==" }

expr = { atom ~ (bin_op ~ atom)* }


// equation = _{ SOI ~ expr ~ EOI }


// name = @{ ASCII_ALPHA ~ ASCII_ALPHANUMERIC* }
function = { name ~ "(" ~ (expr ~ ("," ~ expr)*)? ~ ")" }
